import java.util.Scanner;

public class Main {	 
	public static void main(String[] args)  {
		try (Scanner sc = new Scanner(System.in)) {
					
			
			int N = sc.nextInt();
			
			for(int i = 1; i <= N; i++) {
				for(int j = 1; j <= N*2; j++) {
					if (i >= j || -(i-(N*2+1)) <= j ) {
						System.out.print("*");
					}
					else {
						System.out.print(" ");
					}
				}
				System.out.println();
			}
		
			for(int i = N-1; i > 0; i--) {
				for(int j = 1; j <= N*2; j++) {					
					if(i >= j || -(i-(N*2+1)) <= j)	{
					System.out.print("*");									
					}
					else {
						System.out.print(" ");
					}
				}
				System.out.println();
		}
				
	
				
			}
		}
	}

