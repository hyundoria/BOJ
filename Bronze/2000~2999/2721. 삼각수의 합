import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n= sc.nextInt();

        for (int i=0; i<n; i++) {

            int k = sc.nextInt();

            int sum = 1;
            int w = 0;


            for (int j=2; j<=k+1; j++) {

                sum += j;
                w += sum * (j-1);
            }


            System.out.println(w);
        }

    }
}
