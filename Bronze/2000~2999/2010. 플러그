import java.util.Scanner;

public class Main {	 
	public static void main(String[] args)  {
		try (Scanner sc = new Scanner(System.in)) {
					
			int n = sc.nextInt();
					
			int count = 0;
			
			for (int i = 0; i < n; i++) {
				count += sc.nextInt();			
			}
			
			count = count - (n-1);
				
			System.out.println(count);
			
		
			
		}		
	}
}

