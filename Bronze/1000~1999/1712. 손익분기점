import java.util.*;

public class Main {	 
	public static void main(String[] args)  {
		try (Scanner sc = new Scanner(System.in)) {
			
			
			int a = sc.nextInt();	//고정비용
			int b = sc.nextInt();	//가변비용
			int c = sc.nextInt();	//노트북 가격	
						
			int d = c-b;
			
			if (c <= b) {
				System.out.println("-1");
			}
						
			else{
				System.out.println((a / d)+1);
			}			
						
 						
			}
		}
	}
