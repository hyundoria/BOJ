
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();
        int k = n;
        int cnt = 0;

            for (int i=1; i<=n; i++) {

                if (k == 0) {
                    break;
                }

                if (k >= i) {
                    k = k - i;
                    cnt ++;
                }
                else {
                    i=0;
                }

            }

            System.out.println(cnt);
    }



}
